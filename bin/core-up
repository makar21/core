#!/bin/bash
TPU=$1
RING=.$(git rev-parse --abbrev-ref HEAD)
echo "Up ring $RING"
cp .env.example .env
cp docker/docker.env.example docker/docker.env
docker-compose -e RING=$RING -f common.yml -f producer.yml -f verifier.yml -f worker.$TPU.yml up -d
echo "Fix tendermint volume permissions"
sudo chmod 755 -R docker/volumes
