#!/bin/bash
TPU=gpu
docker build . -f docker/images/core/${TPU}/Dockerfile -t tataucloud/worker_${TPU}
nvidia-docker run \
    --env-file docker/worker.env \
    --name worker_${TPU} \
    --restart unless-stopped \
    -v '${PWD}/keys/${RING}:/app/keys' \
    tataucloud/worker_${TPU} \
    sh -c "python worker.py"